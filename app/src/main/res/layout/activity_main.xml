<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".MainActivity"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="24dp">

        <!-- Top App Bar -->
        <com.google.android.material.appbar.MaterialToolbar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/white"
            app:title="Ambient Health Guardian"
            app:titleCentered="true"
            app:titleTextColor="@color/black"
            android:elevation="4dp"
            android:padding="8dp" />

        <!-- Profile Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/profile_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <ImageView
                        android:id="@+id/profile_picture"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:src="@android:drawable/sym_def_app_icon"
                        android:scaleType="centerCrop"
                        android:background="@drawable/profile_picture_bg"
                        android:contentDescription="Profile Picture"
                        android:layout_marginEnd="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">
                        <EditText
                            android:id="@+id/profile_name_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Name"
                            android:imeOptions="actionNext"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:textStyle="bold" />
                        <EditText
                            android:id="@+id/profile_age_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Age"
                            android:inputType="number"
                            android:imeOptions="actionNext"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />
                        <EditText
                            android:id="@+id/profile_gender_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Gender"
                            android:imeOptions="actionNext"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />
                        <EditText
                            android:id="@+id/profile_blood_type_input"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Blood Type"
                            android:imeOptions="actionDone"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="end">
                        <EditText
                            android:id="@+id/profile_height_input"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:hint="Height (cm)"
                            android:inputType="numberDecimal"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall" />
                        <EditText
                            android:id="@+id/profile_weight_input"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:hint="Weight (kg)"
                            android:inputType="numberDecimal"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall" />
                        <EditText
                            android:id="@+id/profile_bmi_input"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:hint="BMI"
                            android:inputType="numberDecimal"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall" />
                        <EditText
                            android:id="@+id/profile_allergies_input"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:hint="Allergies"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall" />
                        <EditText
                            android:id="@+id/profile_conditions_input"
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:hint="Conditions"
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall" />
                    </LinearLayout>
                </LinearLayout>

                <Button
                    android:id="@+id/profile_save_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save Profile"
                    android:layout_gravity="end"
                    android:layout_marginTop="12dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Vitals Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/vitals_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">
                    <TextView
                        android:id="@+id/label_vitals"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Current Vitals"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textStyle="bold" />
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/manual_test_button"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_marginStart="16dp"
                        android:text="Test"
                        android:textSize="12sp"
                        android:textAllCaps="false"
                        style="@style/Widget.Material3.Button.TonalButton"
                        app:icon="@android:drawable/ic_menu_rotate"
                        app:iconTint="@color/black"
                        app:iconGravity="textStart" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/label_heart_rate"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Heart Rate"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />
                        <TextView
                            android:id="@+id/heart_rate_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-- bpm"
                            android:textAppearance="@style/TextAppearance.Material3.DisplaySmall"
                            android:textStyle="bold"
                            android:textColor="@color/black" />
                    </LinearLayout>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="40dp"
                        android:background="#E0E0E0"
                        android:layout_marginHorizontal="16dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">
                        <TextView
                            android:id="@+id/label_spo2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SpO₂"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />
                        <TextView
                            android:id="@+id/spo2_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-- %"
                            android:textAppearance="@style/TextAppearance.Material3.DisplaySmall"
                            android:textStyle="bold"
                            android:textColor="@color/black" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_marginTop="20dp">
                    <TextView
                        android:id="@+id/label_motion"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Motion/Fall Status: "
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium" />
                    <TextView
                        android:id="@+id/motion_status_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textStyle="bold"
                        android:layout_marginStart="8dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/motion_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Motion: --"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Alerts and Notifications Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/alerts_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <TextView
                    android:id="@+id/alert_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alerts and Notifications"
                    android:textAppearance="@style/TextAppearance.Material3.TitleSmall"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />
                <TextView
                    android:id="@+id/alert_message"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No alerts."
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="#B00020" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- Emergency Contacts Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/emergency_contacts_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">
                <EditText
                    android:id="@+id/contact_name_1_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Contact 1 Name"
                    android:layout_marginBottom="4dp" />
                <EditText
                    android:id="@+id/contact_phone_1_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Contact 1 Phone"
                    android:inputType="phone"
                    android:layout_marginBottom="4dp" />
                <EditText
                    android:id="@+id/contact_relation_1_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Contact 1 Relationship"
                    android:layout_marginBottom="12dp" />
                <EditText
                    android:id="@+id/contact_name_2_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Contact 2 Name"
                    android:layout_marginBottom="4dp" />
                <EditText
                    android:id="@+id/contact_phone_2_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Contact 2 Phone"
                    android:inputType="phone"
                    android:layout_marginBottom="4dp" />
                <EditText
                    android:id="@+id/contact_relation_2_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Contact 2 Relationship"
                    android:layout_marginBottom="12dp" />
                <Button
                    android:id="@+id/contacts_save_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save Contacts"
                    android:layout_gravity="end"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </com.google.android.material.card.MaterialCardView>

        <!-- SOS Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/sos_button"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:text="SOS"
            android:textAllCaps="true"
            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
            android:textColor="@color/white"
            app:cornerRadius="40dp"
            app:icon="@android:drawable/ic_dialog_alert"
            app:iconTint="@color/white"
            app:iconGravity="textStart"
            android:layout_marginStart="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="32dp"
            android:backgroundTint="#D32F2F" />

    </LinearLayout>
</androidx.core.widget.NestedScrollView>